{
  "manifest_version": 3,
  "name": "Bitcointalk BBCode Extension",
  "version": "1.0",
  "description": "Automatically adds related [BBCode] tags with Keyboard shortcuts in Bitcointalk forum.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-bold": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      },
      "description": "Apply bold formatting"
    },
	"toggle-italic": {
      "suggested_key": {
        "default": "Ctrl+I",
        "mac": "Command+I"
      },
      "description": "Apply italic formatting"
    },
	"size-up": {
      "suggested_key": {
        "default": "Ctrl+Up",
        "mac": "Command+Up"
      },
      "description": "Increase size of the text"
    },
	"size-down": {
      "suggested_key": {
        "default": "Ctrl+Down",
        "mac": "Command+Down"
      },
      "description": "Decrease size of the text"
    }
  },
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
